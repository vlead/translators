            "build_steps":{
               "configure":[

               ],
               "pre_build":[
                  
               ],
               "build":[
                  "cd /root/labs/translators",
                  "make -k all"
               ],
               "post_build":[
                  "mkdir -p /var/www/translators",
                  "rsync -a build/code /var/www/translators/",
                  "mkdir /var/www/logs",
                  "chmod -R 777 /var/www/logs",
                  "rm /etc/nginx/sites-enabled/default",
                  "touch /etc/nginx/sites-available/translators",
                  "ln -s /etc/nginx/sites-available/translators /etc/nginx/sites-enabled",
                  "bash scripts/configure.sh",
                  "service nginx restart",
                  "cd /var/www/translators/code/",
                  "gunicorn --bind 0.0.0.0:8000 --timeout 10000 --daemon wsgi",
                  "service nginx restart"
               ],
